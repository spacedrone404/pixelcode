  - var nameTitle = 'PUG/JS/PHP snippets'
  
block main
  body.chamelion  
    +sidemenu('snippets')
    .page-wrapper.wrapper
      .tools-intro Here you will find various snippets I use in web development. In almost all cases it is HTML/PUG/Javascript/PHP. Quite young section, so not so much stuff going on here, but will be updated in upcoming future for sure.

      .batch-title SNIPPET TO SHOW CERTAIN WEBPAGE IF SCREEN WIDTH IS LESS THAN 
      .crt-container
        pre.crt-text.
            document.addEventListener('DOMContentLoaded', () => {
                if (isNoMobilePage()) return; 
                checkScreenSize();
                window.addEventListener('resize', checkScreenSize);
            });

            function isNoMobilePage() {
                return window.location.pathname === '/no-mobile.html'; 
            }

            function checkScreenSize() {
                if (window.innerWidth &lt; 1680 &amp;&amp; !isNoMobilePage()) {
                    window.location.href = '/no-mobile.html';
                }
            }

        button.copy-button(aria-label="Copy code to clipboard") Copy

      .batch-title BLOCKS ANY ZOOM ATTEMPTS COMING FROM TOUCH INTERFACE 
      .crt-container
        pre.crt-text.
          &lt;meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"&gt;

          document.addEventListener("touchmove", function(event){
              event.preventDefault();
          }, { passive: false });


          window.addEventListener('gesturestart', function(e) {
              e.preventDefault(); 
          });

          window.addEventListener('gesturechange', function(e) {
              e.preventDefault(); 
          });

          window.addEventListener('contextmenu', function(e) {
              e.preventDefault(); 
          });


        button.copy-button(aria-label="Copy code to clipboard") Copy

      .batch-title INJECT REPEATED MARKUP BLOCKS VIA JAVASCRIPT
      .crt-container
        pre.crt-text.

          <div class="footer-container"></div>

          document.addEventListener('DOMContentLoaded', function() {
              fetch('./includes/footer.html')
                  .then(response => response.text())
                  .then(data => {
                      document.querySelector('.').innerHTML = data;
                  });
          });

        button.copy-button(aria-label="Copy code to clipboard") Copy

      .batch-title RESTRICT INPUT TO NUMERIC KEYS ONLY
      .crt-container
        pre.crt-text.
          &lt;input class="selection__items-input selection__items-input--connect" type="tel" name="phone" id="phone" placeholder="8 (980) 980-60-94" required oninput="validateNumericInput(this)" pattern="[0-9]*" inputmode="numeric" maxlength="11"&gt;
      

          function validateNumericInput(input) {
              input.value = input.value.replace(/[^0-9]/g, '');
          }

        button.copy-button(aria-label="Copy code to clipboard") Copy

